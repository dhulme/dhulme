.home
	.features
		border-top 1px solid $borderColor
		padding 1.2rem 0
		margin-top 2.5rem
		display flex
		flex-wrap wrap
		align-items flex-start
		align-content stretch
		justify-content space-between
		text-align center
		.feature
			flex-grow 1
			flex-basis 20%
			max-width 20%
			h2
				font-size 1.4rem
				font-weight 500
				border-bottom none
				padding-bottom 0
				color lighten($textColor, 10%)
			p
				color lighten($textColor, 25%)
			img
				height 50px
				width 50px